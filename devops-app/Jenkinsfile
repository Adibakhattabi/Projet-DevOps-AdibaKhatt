pipeline {
    agent any

    tools {
        maven 'Maven-3'
    }

    stages {
        stage('Build') {
            steps {
                // Change 'sh' to 'bat' for Windows
                bat 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                // Change 'sh' to 'bat' for Windows
                bat 'mvn test'
            }
        }

        stage('Archive') {
            steps {
                // Change 'sh' to 'bat' for Windows
                bat 'mvn package -DskipTests' 
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Build et tests réussis'
        }
        failure {
            echo '❌ Build ou tests échoués'
        }
    }
}