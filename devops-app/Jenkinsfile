pipeline {
    agent any

    tools {
        maven 'Maven-3' 
    }

    stages {
        stage('Checkout') {
            steps {
                // Récupère le code depuis GitHub (Étape 2.1) [cite: 28, 33]
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                dir('devops-app') {
                    // Nettoie, compile et lance les tests (Étape 2.2) [cite: 32, 33]
                    bat 'mvn clean test'
                }
            }
        }

        stage('Archive') {
            steps {
                dir('devops-app') {
                    // Crée le JAR et l'archive (Étape 3.2 & 3.5) [cite: 31, 35]
                    bat 'mvn package -DskipTests'
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        stage('Notify Slack') {
            steps {
                // Simulation de la notification Slack (Étape 4) [cite: 38]
                echo '✅ Notification : Le pipeline est terminé avec succès.'
            }
        }
    }

    post {
        success {
            echo '✅ Intégration continue réussie !' [cite: 46]
        }
        failure {
            echo '❌ Échec du pipeline' [cite: 56]
        }
    }
}