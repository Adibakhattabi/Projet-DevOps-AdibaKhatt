pipeline {
    agent any

    tools {
        maven 'Maven-3'
    }

    stages {
        stage('Build') {
            steps {
                // Use 'dir' to move into the folder containing pom.xml
                dir('devops-app') {
                    bat 'mvn clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                dir('devops-app') {
                    bat 'mvn test'
                }
            }
        }

        stage('Archive') {
            steps {
                dir('devops-app') {
                    bat 'mvn package -DskipTests'
                    // Updated path to find the jar within the current dir
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }

    post {
        success {
            echo '✅ Build et tests réussis'
        }
        failure {
            echo '❌ Build ou tests échoués'
        }
    }
}